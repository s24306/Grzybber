            android:text="Blaszki: Gęste, białe, u starych okazów z lekkim odcieniem żółtawo-zielonkawym. U młodych okazów są niewidoczne, gdyż przykryte są białawą osłoną. "
            android:layout_width="346dp"
            android:layout_height="62dp" android:id="@+id/textView22"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.639" app:layout_constraintHorizontal_bias="0.461"/>
