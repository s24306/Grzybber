<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MuchomorActivity">

    <TextView
            android:text="Miąższ: Biały, nie zmienia koloru po przełamaniu. U młodych okazów miąższ ma łagodny zapach, u starych pachnie nieco ziemniakami. Smak przyjemny. "
            android:layout_width="351dp"
            android:layout_height="74dp" android:id="@+id/textView17"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.975"/>
    <TextView
            android:text="Nazwa systematyczna: Amanita phalloides"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView18"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.373"/>
    <TextView
            android:text="Kapelusz: Średnica 5-15 cm, za młodu półkulisty, potem dzwonkowato-łukowaty, w końcu rozpostarty. Skórka gładka, przy brzegu nieprążkowana, składa się z przylegających i promieniście ułożonych włókienek. Kolor czerwony."
            android:layout_width="351dp"
            android:layout_height="101dp" android:id="@+id/textView19"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" app:layout_constraintEnd_toEndOf="parent"
