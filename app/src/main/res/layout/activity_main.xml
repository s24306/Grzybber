<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GrzybberMenuActivity">
    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/grzyber" android:id="@+id/grzyberImage"
            android:layout_marginEnd="100dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="128dp"
            android:visibility="visible" tools:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/grzybyCounter" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0" android:layout_marginStart="100dp"/>
    <TextView
            android:text="@string/welcome_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/grzybyCounter"
            android:padding="10dp" android:paddingTop="10dp"
            android:paddingLeft="10dp" android:paddingRight="10dp" android:paddingBottom="10dp"
            android:textColor="@color/text_colour" android:textSize="@dimen/text_size"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="10dp" android:layout_marginStart="10dp"
            android:visibility="visible" tools:visibility="visible" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="250dp" android:layout_marginBottom="400dp"/>
    <Button
            android:text="Atlas Grzybów"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/atlasGrzybow"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/grzybyCounter"
            android:layout_marginTop="-300dp" android:onClick="changeActivity"/>
    <Button
            android:text="Forum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/atlasGrzybow2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/grzybyCounter"
            android:layout_marginTop="-300dp" android:onClick="changeActivityForum"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.68"/>
    <Button
            android:text="Mapa grzybów"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/atlasGrzybow3"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/grzybyCounter"
            android:layout_marginTop="-300dp" android:onClick="changeActivityMapa"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.837"/>
</androidx.constraintlayout.widget.ConstraintLayout>